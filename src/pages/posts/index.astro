---
import BaseLayout from '@layouts/BaseLayout.astro';
const title = "Posts";
const posts = await Astro.glob("./*.md"); // glob all markdown files in the current directory
---
<BaseLayout title={title}>
    <h1>Blog</h1>
    <p>Aliquip excepteur consequat occaecat fugiat consequat est aliqua excepteur amet voluptate ad amet.</p>

    <ul>
        {posts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
    </ul>
</BaseLayout>