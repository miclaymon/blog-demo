---
import BaseLayout from '@layouts/BaseLayout.astro';
const title = "Posts";
const posts = await Astro.glob("./*.md");
---
<BaseLayout title={title}>
    <main>
        <article>
            <br>
            <h1>{title}</h1>
            <p>Aliquip excepteur consequat occaecat fugiat consequat est aliqua excepteur amet voluptate ad amet.</p>
            
            <ul>
                {posts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
            </ul>
        </article>
    </main>
</BaseLayout>
<style>
    h1 {
        margin: 0 0 1rem 0;
        font-size: 2rem;
    }
    main {
        padding: 1rem;
    }
    article {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 1rem;
    }

    @media screen and (min-width: 720px) {
        main {
            max-width: 100ch;
        }
    }

    @media screen and (min-width: 900px) {
        main {
            max-width: 120ch;
        }
    }
</style>