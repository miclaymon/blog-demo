---
import ThemeIcon from './ThemeIcon.astro';
---
<nav class="nav">
    <section>
        <a href=`/${import.meta.env.PUBLIC_BASE}/`><img src=`/${import.meta.env.PUBLIC_BASE}/assets/astro-icon-light.png` width="64px" alt="Astro logo" id="logo"></a>
        <section style="display: inline-block;">
            <div style="display: inline-block;">
                <!-- <img src="https://docs.astro.build/assets/full-logo-dark.png" width="300" alt="Astro Logo" /> -->
                <a href=`/${import.meta.env.PUBLIC_BASE}/`><h1 id="logo-mark" style="display: inline-block; margin-top: -0.33em;">astro blog</h1></a>
            </div>
            <div class="nav-links">
                <a href=`/${import.meta.env.PUBLIC_BASE}/`>Home</a>
                <a href=`/${import.meta.env.PUBLIC_BASE}/about`>About</a>
                <a href=`/${import.meta.env.PUBLIC_BASE}/contact`>Contact</a>
                <a href=`/${import.meta.env.PUBLIC_BASE}/posts`>Posts</a>
                <a href=`/${import.meta.env.PUBLIC_BASE}/tags`>Tags</a>
            </div>
        </section>
    </section>
    <section>
        <!-- <button>New Post</button> -->
        <ThemeIcon />
        <script defer>
            import "../scripts/menu.js";
        </script>
    </section>
</nav>
<style>
    #logo {
        display: inline-block;
    }
    #logo-mark {
        color: white;
        display: inline-block;
        font-size: 4rem;
        font-weight: 900;
        font-family: "Bagel Fat One", "Inter", "Segoe UI", sans-serif;
        font: 4rem "Bagel Fat One";
        margin: 0;
        margin-top: calc(1em/3);
    }
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: var(--color-bg);
        background-image: var(--accent-gradient);
        color: var(--color-text);
    }
    .nav-links {
        display: flex;
        gap: 1.25em;
        justify-content: space-between;
        align-items: center;
    }
    .nav a {
        margin-right: 1rem;
        color: white;
        font-size: larger;
        font-weight: bold;
        font-family: "Inter", "Segoe UI", "Helvetica Neue", sans-serif;
        text-decoration: none;
    }
</style>