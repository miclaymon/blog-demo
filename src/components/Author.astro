---
const { author } = Astro.props;
---
<div class="author">
    <section>
        <div class="author__avatar">
            <img src=`${author.avatar}` alt={author.name}>
        </div>
        <div class="author__text">
            <div class="author__name">
                <p>{author.name}</p>
            </div>
            <div class="author__id">
                <p><a href={`/${import.meta.env.PUBLIC_BASE}/user/${author.username}`}>{author.username}</a></p>
            </div>
        </div>
    </section>
</div>
<style>
    .author {
        display: inline-block;
        padding: 0.5em 0.75em;
        padding-right: 1.25em;
        border: 1px solid #ccc;
        border-radius: 0.5em;
        background-color: #f9f9f9;
        box-shadow: 0 0 0.15em rgba(0, 0, 25, 0.2);
        margin-top: 1em;
    }
    .author:hover {
        background-color: #f0f0f0;
        animation-duration: 0.5s;
        animation-timing-function: ease-in-out;
        /* mix-blend-mode: multiply; */
    }
    .author p {
        margin: 0;
    }
    .author > section {
        display: flex;
        gap: 1em;
        width: 100%;
        align-items: center;
    }
    .author__avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        overflow: hidden;
        flex-shrink: 0;
    }
    .author__avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .author__text {
        display: flex;
        flex-direction: column;
    }
    .author__name {
        font-weight: bold;
        font-size: larger;
        line-height: normal;
    }
    .author__id {
        font-size: large;
        line-height: normal;
    }
    html.dark .author {
        border-color: #333;
        background-color: #333;
        transition: all 0.15s ease-in-out;
    }
    html.dark .author:hover {
        background-color: #3a3a3a;
        transition: all 0.15s ease-in-out;
        /* mix-blend-mode: multiply; */
    }
</style>